{
  "name": "hotwheels-alerts",
  "version": "1.0.0",
  "description": "Hot Wheels stock alert system for Blinkit, Zepto, and Swiggy",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "start:demo": "DEMO_MODE=true PORT=5001 node backend/server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "dev:demo": "concurrently \"npm run server:demo\" \"npm run client\"",
    "server": "nodemon backend/server.js",
    "server:demo": "DEMO_MODE=true PORT=5001 nodemon backend/server.js",
    "client": "cd frontend && npm start",
    "install-all": "npm install && cd frontend && npm install"
  },
  "keywords": [
    "hotwheels",
    "alerts",
    "blinkit",
    "zepto",
    "swiggy"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "cheerio": "^1.1.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-cron": "^3.0.3",
    "puppeteer": "^21.11.0",
    "user-agents": "^1.1.669",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  }
}
